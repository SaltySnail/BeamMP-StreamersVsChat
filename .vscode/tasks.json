            "label": "Compress client",
            "type": "shell",
            "command": "zip -r C:/Users/Julian/Desktop/beammp_Server/windows/Resources/Client/StreamersVsChat.zip art lua scripts ui LICENSE",
            "windows": {
                "command": "7z a -tzip C:/Users/Julian/Desktop/beammp_Server/windows/Resources/Client/StreamersVsChat.zip art lua scripts ui LICENSE -aoa -r"
